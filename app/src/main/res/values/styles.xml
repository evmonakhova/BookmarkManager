<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorAccent">@color/accent</item>
        <item name="colorControlHighlight">@color/ripple</item>
        <item name="colorOnSurface">@color/secondary_text</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="toolbarStyle">@style/ToolbarStyle</item>
    </style>

    <!--  Toolbar  -->
    <style name="ToolbarStyle">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.ActionBar</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="titleTextAppearance">@style/ToolbarTitleTextAppearance</item>
    </style>

    <style name="ToolbarTitleTextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/toolbar_title_text_size</item>
    </style>

    <style name="DividerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_height</item>
        <item name="android:background">@color/divider</item>
    </style>

    <!--  Text edit  -->
    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/rounded_corners_shape</item>
        <item name="android:padding">@dimen/content_margin</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColorLink">@color/accent</item>
    </style>

    <style name="EditTextStyle.Header">
        <item name="android:singleLine">true</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/header_edit_size</item>
    </style>

    <style name="EditTextStyle.Description">
        <item name="android:gravity">start|top</item>
        <item name="android:lines">6</item>
        <item name="android:maxLines">6</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/description_edit_size</item>
    </style>

    <style name="EditTextStyle.Link">
        <item name="android:autoLink">web</item>
        <item name="android:maxLines">2</item>
        <item name="android:textColorLink">@color/primary</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/link_edit_size</item>
    </style>

    <!--  Text  -->
    <style name="TextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:background">@null</item>
        <item name="android:paddingBottom">@dimen/text_padding</item>
        <item name="android:paddingTop">@dimen/text_padding</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="TextStyle.Header">
        <item name="android:singleLine">true</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/header_text_size</item>
    </style>

    <style name="TextStyle.Description">
        <item name="android:ellipsize">marquee</item>
        <item name="android:maxLines">2</item>
        <item name="android:singleLine">false</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/description_text_size</item>
    </style>

    <style name="TextStyle.Link">
        <item name="android:linksClickable">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColorLink">@color/accent</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/link_text_size</item>
    </style>

    <style name="TextStyle.Settings" parent="TextAppearance.AppCompat">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">@dimen/settings_padding</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <!--  Chips  -->
    <style name="ChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:textColor">@android:color/white</item>
        <item name="chipBackgroundColor">@color/primary</item>
    </style>

    <style name="ChipStyle.Empty" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:textColor">@color/primary</item>
        <item name="chipBackgroundColor">@null</item>
        <item name="chipStrokeColor">@color/primary</item>
        <item name="chipStrokeWidth">1dp</item>
    </style>

</resources>
